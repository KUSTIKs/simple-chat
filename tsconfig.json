{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "typeRoots": ["./@types"],
    "baseUrl": ".",
    "paths": {
      "@simple-chat/types": ["src/types/index.ts"],
      "@simple-chat/components": ["src/components/index.ts"],
      "@simple-chat/config": ["src/config/index.ts"],
      "@simple-chat/assets": ["src/assets/index.ts"],
      "@simple-chat/widgets": ["src/widgets/index.ts"],
      "@simple-chat/layouts": ["src/layouts/index.ts"],
      "@simple-chat/utils": ["src/utils/index.ts"],
      "@simple-chat/services": ["src/services/index.ts"],
      "@simple-chat/enums": ["src/enums/index.ts"],
      "@simple-chat/pages": ["src/pages/index.ts"],
      "@simple-chat/store": ["src/store/index.ts"],
      "@simple-chat/hooks": ["src/hooks/index.ts"],
      "@root/*": ["./*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
